
<view class="cates" >
    <searchInput/>
    
    <!-- 内容 -->
    <view class="cate_content">
        <scroll-view 
            class="cate_left"
            scroll-y="true"
            >
            <view 
                class="cate_left_item {{index===currentIndex?'active':''}}"
                wx:for="{{cateLeftList}}"
                wx:key="item1"
                bindtap="handItemTap"
                data-index = "{{index}}"
            >
                {{item}}
            </view>
        </scroll-view>
        <scroll-view scroll-top="{{scrollTop}}" class="cate_right" scroll-y="true" >
            <view 
                wx:for="{{cateRightList}}"
                wx:for-item="item1"
                wx:for-index="index1"
                wx:key="cat_id"
            >
                <view class="cate_title">/
                    <text class="delimiter"></text>
                    <text class="title">{{item1.cat_name}}</text>
                    <text class="delimiter"></text>
                    /</view>
                <view class="cate_list">
                    <navigator 
                        wx:for="{{item1.children}}"
                        wx:for-item="item2"
                        wx:for-index="index2"
                        wx:key="cat_id"
                    >
                        <image mode="widthFix" src="{{item2.cat_icon}}" />
                        <view class="cate_goodname">
                            {{item2.cat_name}}
                        </view>
                    </navigator>
                </view>
            </view>
        </scroll-view>
    
    </view>

</view><!-- 搜索 -->

